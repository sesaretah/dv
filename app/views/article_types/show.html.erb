<div class='row'>
  <div class="col-lg-12 order-lg-1">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%=t :article_types%></h3>
      </div>
      <div class="card-body">
        <div class='row'>
          <div class='col-md-12 col-lg-12'>
            <div class="form-group">
              <%= label :article_type, :title , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @article_type.title %></div>
            </div>
            <div class="form-group">
              <%= label :article_type, :description , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @article_type.description %></div>
            </div>
          </div>
        </div>
        <%= render partial: 'articles/list', locals: {articles: @article_type.articles}%>
      </div>
    </div>
  </div>
</div>
