      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :pp, class: "form-label" %>
        <%= f.text_field :pp , class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :vol, class: "form-label" %>
        <%= f.text_field :vol , class: "form-control" %>
      </div>
    </div>
  </div>

  <%= f.hidden_field :article_id, value: article.id%>
  <div class="row">
    <div class="col-md-8">
      <div class="form-group">
        <%= f.label :publication_date, class: "form-label" %>

      </div>
    </div>
  </div>

  <div class="card-footer text-right">
    <button type="submit" class="btn btn-primary"><%=t :submit%></button>
  </div>
  <% end %>
