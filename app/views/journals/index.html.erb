<div class="row row-cards">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @journals.each do |journal| %>
          <tr>
                        <td><%= journal.title %></td>
                        <td><%= journal.vol %></td>
                        <td><%= journal.no %></td>
                        <td><%= link_to t(:show), journal %></td>
            <td><%= link_to t(:edit), edit_journal_path(journal) %></td>
            <td><%= link_to t(:destroy), journal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
