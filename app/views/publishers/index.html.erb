        <tbody>
          <% @publishers.each do |publisher| %>
          <tr>
                        <td><%= publisher.title %></td>
                        <td><%= publisher.description %></td>
                        <td><%= publisher.user_id %></td>
                        <td><%= link_to t(:show), publisher %></td>
            <td><%= link_to t(:edit), edit_publisher_path(publisher) %></td>
            <td><%= link_to t(:destroy), publisher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
