<div class="row row-cards">
  <div class="col-md-3">
    <h3 class="page-title mb-5"><%=t :notifications%></h3>
    <div>
      <div class="list-group list-group-transparent mb-0">
        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center active">
          <span class="icon mr-3"><i class="fe fe-message-square" style="vertical-align:-5px;"></i></span><%=t :article_comment %><span class="mr-auto badge badge-primary">14</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
          <span class="icon mr-3"><i class="fe fe fe-trending-up" style="vertical-align:-5px;"></i></span><%=t :article_sent %><span class="mr-auto badge badge-primary">14</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
          <span class="icon mr-3"><i class="fe fe fe-arrow-left" style="vertical-align:-5px;"></i></span><%=t :article_received %><span class="mr-auto badge badge-primary">14</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
          <span class="icon mr-3"><i class="fe fe-trending-down" style="vertical-align:-5px;"></i></span><%=t :article_refunded %><span class="mr-auto badge badge-primary">14</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
          <span class="icon mr-3"><i class="fe fe-arrow-left" style="vertical-align:-5px;"></i></span><%=t :article_refunded_received %><span class="mr-auto badge badge-primary">14</span>
        </a>
      </div>
      <div class="mt-6">
        <a href="#" class="btn btn-secondary btn-block">Compose new Email</a>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @notifications.each do |notification| %>
          <tr>
            <td><%= raw notification.icon %></td>
            <td><%= raw notification.full_title %></td>
            <td><span class="small"><%=t notification.notification_type %></span></td>
            <td>
              <%= link_to notification, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-secondary btn-sm ml-1" do%>
                <i class='fe fe-trash-2'></i> <%=t :destroy%>
              <%end%>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
