<%= form_for(@notification, html: {class: 'card'}) do |f| %>
<div class="card-header">
  <h3 class="card-title"><%=t :new_notification %></h3>
</div>
<% if @notification.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@notification.errors.count, "error") %> prohibited this notification from being saved:</h2>

  <ul>
    <% @notification.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="card-body">
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title , class: "form-control" %>
          </div>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :content, class: "form-label" %>
      <%= f.text_area :content , class: "form-control" %>
          </div>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :notifiable_id, class: "form-label" %>
      <%= f.text_field :notifiable_id , class: "form-control" %>
          </div>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :notifiable_type, class: "form-label" %>
      <%= f.text_field :notifiable_type , class: "form-control" %>
          </div>
  </div>
</div>
<div class="card-footer text-right">
  <button type="submit" class="btn btn-primary"><%=t :submit%></button>
</div>
<% end %>
