<%= form_for(@dating, html: {class: 'card'}) do |f| %>
<div class="card-header">
  <h3 class="card-title"><%=t :new_dating %></h3>
</div>
<% if @dating.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@dating.errors.count, "error") %> prohibited this dating from being saved:</h2>

  <ul>
    <% @dating.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="card-body">
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :article_event_id, class: "form-label" %>
      <%= f.number_field :article_event_id , class: "form-control" %>
          </div>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :article_id, class: "form-label" %>
      <%= f.number_field :article_id , class: "form-control" %>
          </div>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :event_date, class: "form-label" %>
      <%= f.date_select :event_date , class: "form-control" %>
          </div>
  </div>
</div>
<div class="card-footer text-right">
  <button type="submit" class="btn btn-primary"><%=t :submit%></button>
</div>
<% end %>
