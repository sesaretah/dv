<%= form_for(@upload, html: { class: "card" }) do |f| %>
<div class="card-header">
  <h3 class="card-title"><%= t :new_upload %></h3>
</div>
<% if @upload.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@upload.errors.count, "error") %> prohibited this upload from being saved:</h2>

  <ul>
    <% @upload.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="card-body">
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
          <label class="form-label"><%= t :attachment_title %></label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
          <label class="form-label"><%= t :attachment_content %></label>
        <%= f.text_field :detail, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label class="form-label"></label>
        <label class="custom-control custom-checkbox custom-control-inline">
        <%= f.check_box :summable, class: "custom-control-input" %>
          <span class="custom-control-label" style='padding-right: 23px;padding-top: 2px;'><%= t :summable %></span>
        </label>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label class="form-label"></label>
        <label class="custom-control custom-checkbox custom-control-inline">
          <%= f.check_box :printable, class: "custom-control-input" %>
          <span class="custom-control-label" style='padding-right: 23px;padding-top: 2px;'><%= t :printable %></span>
        </label>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label class="form-label"></label>
        <label class="custom-control custom-checkbox custom-control-inline">
         <%= f.check_box :only_index, class: "custom-control-input" %>
          <span class="custom-control-label" style='padding-right: 23px;padding-top: 2px;'><%= t :only_index %></span>
        </label>
      </div>
    </div>
  </div>

  <div class="card-footer text-right">
    <button type="submit" class="btn btn-primary"><%= t :submit %></button>
  </div>
  <% end %>
  </div>
