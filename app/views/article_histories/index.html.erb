<div class="row row-cards">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @article_histories.each do |article_history| %>
          <tr>
                        <td><%= article_history.title %></td>
                        <td><%= article_history.abstract %></td>
                        <td><%= article_history.content %></td>
                        <td><%= article_history.url %></td>
                        <td><%= article_history.document_contents %></td>
                        <td><%= link_to t(:show), article_history %></td>
            <td><%= link_to t(:edit), edit_article_history_path(article_history) %></td>
            <td><%= link_to t(:destroy), article_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
