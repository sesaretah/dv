<div class="row row-cards">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @comments.each do |comment| %>
          <tr>
                        <td><%= comment.content %></td>
                        <td><%= comment.commentable_id %></td>
                        <td><%= comment.commentable_type %></td>
                        <td><%= link_to t(:show), comment %></td>
            <td><%= link_to t(:edit), edit_comment_path(comment) %></td>
            <td><%= link_to t(:destroy), comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
