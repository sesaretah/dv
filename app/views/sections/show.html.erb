<div class='row'>
  <div class="col-lg-12 order-lg-1">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"></h3>
        <div class="card-options">
          <a href="#" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
        </div>
      </div>
      <div class="card-body">
        <div class='row'>
          <div class='col-md-12 col-lg-12'>
            <div class="form-group">
              <%= label :section, :title , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @section.title %></div>
            </div>
            <div class="form-group">
              <%= label :section, :workflow_id , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @section.workflow.title %></div>
            </div>
          </div>
        </div>

        <div class="col-12 pt-2">
      <%= form_for SectionItem.new, remote: true do |f|%>
      <%= hidden_field_tag :section_id, @section.id%>
      <div class="row">
        <div class="col-md-5">
          <div class="form-group">
            <%= f.label :item_name, class: "form-label" %>
            <%= select_tag :item_name, options_for_select(item_names), {class: "form-control"} %>
          </div>
        </div>
      </div>
      <%end%>

      <div class="text-right mt-2 mb-2">
        <button id='submit-btn' type="submit" class="btn btn-sm btn-primary"><%=t :submit%></button>
      </div>
      <script>
      $( "#submit-btn" ).click(function() {
        console.log('clicked');
        $( "#new_discussion" ).submit();
      });
      </script>
    </div>
      </div>
    </div>
  </div>
</div>
