<div class='row'>
  <div class="col-lg-12 order-lg-1">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%=t :keywords%></h3>
      </div>
      <div class="card-body">
        <div class='row'>
          <div class='col-md-12 col-lg-12'>
            <div class="form-group">
              <%= label :keyword, :title , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @keyword.title %></div>
            </div>
            <div class="form-group">
              <%= label :keyword, :description , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @keyword.description %></div>
            </div>
          </div>
        </div>
        <% @taggings = Tagging.where(target_type: 'Keyword', target_id: @keyword.id, taggable_type: 'Article')%>
        <% @articles = []%>
        <% for tagging in @taggings%>
          <% @article = Article.find_by_id(tagging.taggable_id)%>
          <% if !@article.blank?%>
            <% @articles << @article %>
          <%end%>
        <%end%>
        <%= render partial: 'articles/list', locals: {articles: @articles}%>
      </div>
    </div>
  </div>
</div>
