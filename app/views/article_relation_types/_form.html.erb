<%= form_for(@article_relation_type, html: {class: 'card'}) do |f| %>
<div class="card-header">
  <h3 class="card-title"><%=t :new_article_relation_type %></h3>
</div>
<% if @article_relation_type.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@article_relation_type.errors.count, "error") %> prohibited this article_relation_type from being saved:</h2>

  <ul>
    <% @article_relation_type.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="card-body">
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title , class: "form-control" %>
          </div>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description , class: "form-control" %>
          </div>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :reverse_relation_id, class: "form-label" %>
          <%= f.select 'reverse_relation_id', options_for_select(ArticleRelationType.all.order(:title).collect{ |u| ["#{u.title}", u.id] }, @article_relation_type.reverse_relation_id), {:include_blank => true} ,{class:"form-control "}%>
          </div>
  </div>
</div>
<div class="card-footer text-right">
  <button type="submit" class="btn btn-primary"><%=t :submit%></button>
</div>
<% end %>
