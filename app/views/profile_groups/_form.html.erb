<%= form_for(@profile_group, html: {class: 'card'}) do |f| %>
<div class="card-header">
  <h3 class="card-title"><%=t :profile_group_form %></h3>
</div>
<% if @profile_group.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@profile_group.errors.count, "error") %> prohibited this profile_group from being saved:</h2>

  <ul>
    <% @profile_group.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="card-body">
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title , class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description , class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :workflow_id, class: "form-label" %>
          <%= f.select 'workflow_id', options_for_select(Workflow.all.order(:title).collect{ |u| ["#{u.title}", u.id] }, @profile_group.workflow_id), {:include_blank => true} ,{class:"form-control "}%>
        </div>
  </div>
</div>

  <div class="card-footer text-right">
    <button type="submit" class="btn btn-primary"><%=t :submit%></button>
  </div>
  <% end %>
</div>