<%= form_for(@kinship_history, html: {class: 'card'}) do |f| %>
<div class="card-header">
  <h3 class="card-title"><%=t :new_kinship_history %></h3>
</div>
<% if @kinship_history.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@kinship_history.errors.count, "error") %> prohibited this kinship_history from being saved:</h2>

  <ul>
