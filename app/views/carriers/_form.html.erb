    <div id='carrier-form'>
    <%= form_for Carrier.new, remote: true do |f| %>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label"><%=t :source_workflow_state%></label>
                     <%= f.select  "source_workflow_state_id", options_for_select(@workflow.workflow_states.collect { |p| [ p.title, p.id ] }), {}, {class: "form-control"} %>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label"><%=t :target_workflow_state%></label>
                     <%= f.select  "target_workflow_state_id", options_for_select(@workflow.workflow_states.collect { |p| [ p.title, p.id ] }), {}, {class: "form-control"} %>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label"><%=t :timer%></label>
                     <%= f.number_field "timer", class: "form-control"%>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label"><%=t :condition_if_voting%></label>
                     <%= f.select 'voting_condition', options_for_select(carrier), {} ,{class:"form-control "}%>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label"><%=t :trials%></label>
                     <%= f.number_field "trials", class: "form-control"%>
                </div>
            </div>
        </div>


         <button type="submit" class="btn btn-primary"><%=t :submit%></button>
        <%end%>
        </div>