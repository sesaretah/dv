<div class="row row-cards">
  <div class="col-lg-3 ">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <%= form_tag '/home/advanced_search', method: :get, class:'card' do -%>
        <div class="card-body">
          <div class="form-group">
            <% for result in @group_results%>
            <% if !result[1].blank?%>
            <div class="form-label"><%=t result[0].underscore.pluralize%></div>
            <% result[1].each_with_group_and_count do |r, group, count| %>
            <div class="custom-controls-stacked">
              <label class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="<%= result[0]%>_<%= group%>" value="<%= group%>" <% if params["#{result[0]}_#{group}"]%> checked<%end%>>
                <span class="custom-control-label" style='padding-top: 4px;padding-right: 22px;'>
                  <%= result[0].classify.constantize.find_by_id(group).title%> (<%= count%>)
                </span>
              </label>
            </div>
            <%end%>
            <%end%>
            <%end%>
          </div>
          <%= hidden_field_tag :q, params[:q]%>
        </div>
        <div class="card-footer">
          <div class="text-center">
            <button type="button" id='clear' class="btn btn-gray btn-sm"><i class="fe fe-delete" style="vertical-align:-3px;"></i> <%=t :clear%> </button>
            <button type="submit" class="btn btn-lime btn-sm"><i class="fe fe-filter" style="vertical-align:-3px;"></i> <%=t :filter%> </button>
          </div>
        </div>
        <script>
        $(document).ready(function() {
          $( "#clear" ).on("click", function(){
            $('input:checkbox').removeAttr('checked');
            $(this).val('check all');
          })
        });
        </script>
        <%end%>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <div class="card-header">
        <%= form_tag '/home/advanced_search', method: :get , class:"col-lg-12" do -%>
        <div class="input-group">
          <input type="text" name='q' class="form-control" placeholder="<%=t :search%>" value='<%= params[:q]%>'>
          <div class="input-group-append">
            <button type="submit" class="btn btn-secondary">
              <i class="fe fe-search"></i>
            </button>
          </div>
        </div>
        <%end%>
      </div>
      <div class="card-body">
        <% for result in @model_results%>
        <div class="form-group">
          <div class= "form-label" style= 'color: #7795c1;'><%= link_to result do%><%= raw result.excerpts.title%><%end%></div>
          <div class="form-control-plaintext" style="font-size: smaller;"><%=raw result.excerpts.abstract %></div>
          <div class="form-control-plaintext" style="font-size: smaller;"><%=raw result.excerpts.content %></div>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
