<div class="container">
  <div class="row">
    <div class="col col-login mx-auto">
      <div class="alert alert-warning" role="alert">
<%= devise_error_messages! %>
</div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'card'}) do |f| %>

      <div class="card-body p-6">
        <div class="d-flex mb-6 mr-auto ml-auto">
          <img src="/assets/logo.png" class="h-6" alt="">
          <div class="ml-4" style="line-height: 18px;font-size: 1rem;font-weight: 600;color: #008000;display: inline;"><%=t :shoa%><br />
            <span class="text-muted" style="font-size: 0.6rem;"><%=t :shoa_details%></span>
          </div>
        </div>
        <div class="card-title"><%=t :sign_up%></div>
        <div class="form-group">
          <label class="form-label"><%=t :mobile%><span class="form-required">*</span></label>
          <%= f.text_field :mobile, autofocus: true, class:"form-control", placeholder:"#{t(:enter_mobile)}" %>
        </div>

        <div class="form-group">
          <label class="form-label"><%=t :fullname%><span class="form-required">*</span></label>
          <%= f.text_field :fullname, class:"form-control" %>
        </div>

        <div class="form-group">
          <label class="form-label"><%=t :email%><span class="form-required">*</span></label>
          <%= f.text_field :email, class:"form-control" %>
        </div>
        <% if !params[:sso].blank?%>
          <% @sso = Sso.where(uuid: params[:sso]).first%>
          <% if !@sso.blank? && @sso.status == 'success'%>
            <%= hidden_field_tag :sso, params[:sso]%>
            <div class="alert alert-info" role="alert">
              <i class="fe fe-alert-triangle" style="vertical-align: -3px;"></i>
              <span class="small"><%=t :set_password_if_you_want_to_use_mobile_app%></span>
            </div>
          <%end%>
        <%end%>
        <div class="form-group">
          <label class="form-label" for="user_password">
            <%=t :password%>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> <%=t :characters_minimum%>)</em>
            <% end %>
          </label>

          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class:"form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
        </div>
        <div class="form-group">
          <label class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input">
            <span class="custom-control-label" style="font-size: 12px; padding-right: 3px;padding-top: 10px;"><a class="text-green" href="terms.html"><%=t :terms_and_policy %></a>  <%=t :is_agreed%></span>
          </label>
        </div>
        <div class="form-footer mb-3">
          <button type="submit" class="btn btn-green btn-block"><%=t :sign_up%></button>
        </div>
      </div>
      <%end%>
      <div class="text-center text-muted">
        <%=t :already_have_account%> <a class="text-green" href="/users/sign_in"><%=t :sign_in%></a>
      </div>
    </div>
  </div>
</div>
