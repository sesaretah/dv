          <tr>
                        <td><%= workflow_state.title %></td>
                        <td><%= workflow_state.workflow_id %></td>
                        <td><%= link_to t(:show), workflow_state %></td>
            <td><%= link_to t(:edit), edit_workflow_state_path(workflow_state) %></td>
