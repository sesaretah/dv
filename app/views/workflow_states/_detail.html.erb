            <span class="custom-control-label" style='padding-right: 23px;padding-top: 2px;'><%=t :article_source%></span>
          </label>
          <label class="custom-control custom-checkbox custom-control-inline ml-0 pr-2">
            <input type="checkbox" class="custom-control-input" name="article_area_checkbox" id="article_area_checkbox" value="option3" disabled <%if workflow_state.editable.include?('article_area_checkbox')%>checked<%end%>>
            <span class="custom-control-label" style='padding-right: 23px;padding-top: 2px;'><%=t :article_area%></span>
          </label>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
        <label class="form-label">
          <%=t :votable%>
        </label>
        <%= select_tag 'votable', options_for_select(existence, workflow_state.votable)  ,{include_blank: true, class:"form-control", disabled: true}%>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <label class="form-label">
          <%=t :start_point%>
        </label>
        <%= select_tag 'start_point', options_for_select(existence, workflow_state.start_point)  ,{include_blank: true, class:"form-control ", disabled: true}%>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <label class="form-label">
          <%=t :end_point%>
        </label>
        <%= select_tag 'end_point', options_for_select(existence, workflow_state.end_point)  ,{include_blank: true, class:"form-control", disabled: true}%>
      </div>
    </div>
  </div>
</div>
