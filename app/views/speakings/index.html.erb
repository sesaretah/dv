  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @speakings.each do |speaking| %>
          <tr>
                        <td><%= speaking.language_id %></td>
                        <td><%= speaking.article_id %></td>
                        <td><%= link_to t(:show), speaking %></td>
            <td><%= link_to t(:edit), edit_speaking_path(speaking) %></td>
            <td><%= link_to t(:destroy), speaking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
