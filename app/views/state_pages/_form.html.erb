        </label>

        <label class="form-check form-switch">   
           <%= f.check_box :item_kinships, class: "form-check-input" %>
           <%= f.label :item_kinships, class: "form-check-label" %>
        </label>

        <label class="form-check form-switch">   
           <%= f.check_box :item_originatings, class: "form-check-input" %>
           <%= f.label :item_originatings, class: "form-check-label" %>
        </label>



         <label class="form-check form-switch">   
           <%= f.check_box :item_areaings, class: "form-check-input" %>
           <%= f.label :item_areaings, class: "form-check-label" %>
        </label>

         <label class="form-check form-switch">   
           <%= f.check_box :item_publications, class: "form-check-input" %>
           <%= f.label :item_publications, class: "form-check-label" %>
         </label>


         <button type="submit" class="btn btn-primary"><%= t :submit %></button>
    <% end %>
</div>