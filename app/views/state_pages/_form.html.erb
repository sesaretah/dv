<div id='state_page-form'>
    <%= form_for @state_page, remote: true do |f| %>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label"><%= t :workflow_state %></label>
                     <%= f.select "workflow_state_id", options_for_select(@workflow.workflow_states.collect { |p| [p.title, p.id] }, @state_page.workflow_state_id), {}, { class: "form-control" } %>
                </div>
            </div>
        </div>

        <label class="form-check form-switch">   
           <%= f.check_box :item_title, class: "form-check-input" %>
           <%= f.label :item_title, class: "form-check-label" %>
       </label>

        <label class="form-check form-switch">   
           <%= f.check_box :item_titlings, class: "form-check-input" %>
           <%= f.label :item_titlings, class: "form-check-label" %>
        </label>
        
        <label class="form-check form-switch">   
           <%= f.check_box :item_abstract, class: "form-check-input" %>
           <%= f.label :item_abstract, class: "form-check-label" %>
        </label>

         <label class="form-check form-switch">   
           <%= f.check_box :item_content, class: "form-check-input" %>
           <%= f.label :item_content, class: "form-check-label" %>
        </label>


        
        <label class="form-check form-switch">   
           <%= f.check_box :item_url, class: "form-check-input" %>
           <%= f.label :item_url, class: "form-check-label" %>
        </label>


         <label class="form-check form-switch">   
           <%= f.check_box :item_notes, class: "form-check-input" %>
           <%= f.label :item_notes, class: "form-check-label" %>
         </label>

         <label class="form-check form-switch">   
           <%= f.check_box :item_dimensions, class: "form-check-input" %>
           <%= f.label :item_dimensions, class: "form-check-label" %>
         </label>

         <label class="form-check form-switch">   
           <%= f.check_box :item_retrieval_number, class: "form-check-input" %>
           <%= f.label :item_retrieval_number, class: "form-check-label" %>
         </label>

         <label class="form-check form-switch">   
           <%= f.check_box :item_position, class: "form-check-input" %>
           <%= f.label :item_position, class: "form-check-label" %>
         </label>
        
        <label class="form-check form-switch">   
           <%= f.check_box :item_keywords, class: "form-check-input" %>
           <%= f.label :item_keywords, class: "form-check-label" %>
        </label>

        <label class="form-check form-switch">   
           <%= f.check_box :item_upload, class: "form-check-input" %>
           <%= f.label :item_upload, class: "form-check-label" %>
        </label>
        
        <label class="form-check form-switch">   
           <%= f.check_box :item_datings, class: "form-check-input" %>
           <%= f.label :item_datings, class: "form-check-label" %>
       </label>
        
        <label class="form-check form-switch">   
           <%= f.check_box :item_typings, class: "form-check-input" %>
           <%= f.label :item_typings, class: "form-check-label" %>
        </label>
        
        <label class="form-check form-switch">   
           <%= f.check_box :item_speakings, class: "form-check-input" %>
           <%= f.label :item_speakings, class: "form-check-label" %>
        </label>
        
        <label class="form-check form-switch">   
           <%= f.check_box :item_formatings, class: "form-check-input" %>
           <%= f.label :item_formatings, class: "form-check-label" %>
        </label>

        <label class="form-check form-switch">   
           <%= f.check_box :item_contributions, class: "form-check-input" %>
