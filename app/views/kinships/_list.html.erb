<div id='article_kinships_list'>
  <div class="table-responsive">
    <table class="table card-table table-striped table-vcenter">
      <thead>
        <tr>
          <th><%=t :article_relation_type%></th>
          <th><%=t :kin%></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for kinship in article.kinships.order('rank desc, updated_at asc')%>
        <% if !kinship.kin.blank?%>
        <tr>
          <td><%= kinship.article_relation_type.title%></td>
          <td><%= truncate(kinship.kin.title, length: 30) %></td>
          <td>
            <% if article.kinships.order('rank desc, updated_at asc').first.id != kinship.id%>
            <%= link_to "/kinships/change_rank/#{kinship.id}?to=up", class: "icon", remote: true do %>
            <i class="fe fe-chevrons-up" style='vertical-align:-3px;'></i>
            <%end%>
            <%else%>
            <span class='icon'><i class="fe fe-chevrons-up" style='vertical-align:-3px;color:#f2f4f9'></i></span>
            <%end%>
            <% if article.kinships.order('rank desc, updated_at asc').last.id != kinship.id%>
            <%= link_to "/kinships/change_rank/#{kinship.id}?to=down", class: "icon", remote: true do %>
            <i class="fe fe-chevrons-down" style='vertical-align:-3px;'></i>
            <%end%>
            <%else%>
            <span class='icon'><i class="fe fe-chevrons-up" style='vertical-align:-3px;color:#f2f4f9'></i></span>
            <%end%>
          </td>
          <td class="">
            <%= link_to kinship, method: :delete, remote: true, data: { confirm: "#{t(:are_you_sure_?)}" } do%>
              <i class="fe fe-trash"></i>
            <%end%>
          </td>
        </tr>
        <%end%>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
