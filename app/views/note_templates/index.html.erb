<div class="row row-cards">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">
            <div class="text-center">
             
              <%= link_to  new_note_template_url, class: "btn btn-lime  btn-sm" do%>
              <i class="fe fe-plus" style="vertical-align:-3px;"></i> <%=t :new%>
              <%end%>
            </div>
          </div>
          <div class="card-footer">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <div class="card-header">
        <%=t :note_templates%>
      </div>
      <div class='table-responsive'>
        <table class="table table-hover table-outline table-vcenter text-nowrap">
          <thead>
            <tr>
              <th class="text-center"><i class="fe fe-command" style="vertical-align: -4px;"></i></th>
              <th><%=t :title%></th>
              <th><%=t :articles %></th>
              <th><%=t :last_editor %></th>
              <th><%=t :last_edit %></th>
            </tr>
          </thead>
          <tbody>
            <% @note_templates.each do |note_template| %>
            <tr>
              <td class="text-center">
                <div class="item-action dropdown">
                  <a href="javascript:void(0)" data-toggle="dropdown" class="icon"><i class="fe fe-more-vertical"></i></a>
                  <div class="dropdown-menu dropdown-menu-right">
                    <a href="/note_templates/<%= note_template.id%>" class="dropdown-item"><i class="dropdown-icon fe fe-play"></i><%=t :show%> </a>
                    <% if grant_access("alter_note_templates", current_user)%>
                    <a href="/note_templates/<%= note_template.id%>/edit" class="dropdown-item"><i class="dropdown-icon fe fe-edit-2"></i> <%=t :edit%> </a>
                    <%= link_to note_template, method: :delete, class: "dropdown-item" ,data: { confirm: 'Are you sure?' } do %>
                    <i class="dropdown-icon fe fe-trash"></i> <%=t :destroy%>
                    <%end%>
                    <%end%>
                  </div>
                </div>
              </td>
              <td><%= note_template.title %></td>
              <td>
                <div class="tag tag-dark" style='vertical-align: 6px;'>
                  <%= note_template.articles.count %>
                  <span class="tag-addon tag-success"><i class="fe fe-book-open" style="vertical-align: -3px;"></i></span>
                </div>
              </td>
              <td>
                <span class="tag" style='vertical-align: -3px;'>
                  <span class="tag-avatar avatar" style="background-image: url('<%= note_template.user.profile.avatar(:tiny)%>')"></span>
                  <%= truncate(note_template.user.profile.fullname, length: 15)%>
                </span>
              </td>
              <td>
                <small class="text-muted">
                  <span>
                    <% @jalali = JalaliDate.to_jalali(note_template.updated_at)%>
                    <%= @jalali.year%>/<%= @jalali.month%>/<%= @jalali.day%>
                  </span>
                </small>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
