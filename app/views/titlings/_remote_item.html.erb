<div class="row">
  <div class="col-md-10">
    <div class="form-group">
      <% if !defined?(titling)%>
      <% @r = SecureRandom.hex(8)%>
      <%= select_tag "#{@r}_title_type", options_for_select(TitleType.all.collect { |p| [ p.title, p.id ] }) , { :class => "comapct-form  form-control col-md-4"}%>
      <%= text_field_tag "#{@r}_other_title", nil , class: "form-control" %>
      <%else%>
      <% @r = SecureRandom.hex(8)%>
      <%= select_tag "#{@r}_title_type", options_for_select(TitleType.all.collect { |p| [ p.title, p.id ] }, titling.title_type.id) , { :class => "comapct-form  form-control col-md-4"}%>
      <%= text_field_tag "#{@r}_other_title", titling.content , class: "form-control" %>
      <%end%>
    </div>
  </div>
</div>
