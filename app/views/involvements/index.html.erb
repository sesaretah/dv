<div class="row row-cards">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @involvements.each do |involvement| %>
          <tr>
                        <td><%= involvement.article_id %></td>
                        <td><%= involvement.publisher_id %></td>
                        <td><%= involvement.details %></td>
                        <td><%= link_to t(:show), involvement %></td>
            <td><%= link_to t(:edit), edit_involvement_path(involvement) %></td>
            <td><%= link_to t(:destroy), involvement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
