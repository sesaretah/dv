<%= render partial: 'articles/progress_bar', locals: {article: @article, active: ['titles']}%>
<%= form_for(@article, html: {class: 'card'}) do |f| %>
<div class="card-header">
  <h3 class="card-title"><%=t :titles %></h3>
</div>
<% if @article.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

  <ul>
    <% @article.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="card-body">
  <div class="row">
    <div class="col-md-10">
      <div class="form-group">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title , class: "form-control",  required: '',  oninvalid: "this.setCustomValidity(this.willValidate ? '' :'#{t(:please_enter_data_in_this_field)}')" %>
      </div>
    </div>
  </div>

  <%=t :other_titles%>
  <%= link_to '/titlings/add_item/1', remote: true do%>
    <i class="fe fe-plus-circle" style="vertical-align:-3px;"></i>
  <%end%>
  <hr class="mt-2 mb-4"/>
  <div id='titling-items'>
    <%= render partial: 'titlings/remote_item'%>
  </div>

  <div class="card-footer text-right">
    <button type="submit" class="btn btn-primary"><%=t :submit_and_go%></button>
  </div>
  <% end %>
