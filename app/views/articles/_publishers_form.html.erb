<div class='row row-cards row-deck'>
  <div  class='col-sm-6 col-lg-6'>
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%=t :article_publications_form%></h3>
      </div>
      <div class="card-status card-status-left bg-blue"></div>
      <div class="card-body">
        <% if permit_by_workflow(article, current_user, 'publication')%>
          <%= render partial: 'publications/remote_form', locals: {article: article, publication: Publication.new}%>
        <%end%>
      </div>
    </div>
  </div>

  <div class='col-sm-6 col-lg-6'>
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%=t :article_publications_list%></h3>
      </div>
        <%= render partial: 'publications/list', locals: {article: article}%>
    </div>
  </div>
</div>
