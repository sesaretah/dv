<div class="row row-cards">
  <div class="col-lg-12">
      <ol class="breadcrumb" aria-label="breadcrumbs">
        <li class="breadcrumb-item"><%=t :browse_articles %></li>
        <%if params[:scope] && params[:scope] == 'my'%>
        <li class="breadcrumb-item"><%=t :my_articles%></li>
        <% end %>
        <%if params[:scope] && params[:scope] == 'related'%>
        <li class="breadcrumb-item"><%=t :related_articles%></li>
        <% end %>
        <%if params[:scope] && params[:scope] == 'all'%>
        <li class="breadcrumb-item"><%=t :all_articles%></li>
        <% end %>
    </ol>
  </div>
</div>

<div class="row row-cards row-deck">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">

    <div class="card mb-0 p-0">
      <div class="card-header p-0" style="min-height: 0rem;" id="heading1">
        <h5 class="mb-0">
          <a href="/articles?scope=my" class="btn btn-link" style="font-size: 0.875rem;font-weight: 500;">
            <%=t :my_articles%>
          </a>
        </h5>
      </div>

      <div class="card-header p-0" style="min-height: 0rem;" id="heading1">
        <h5 class="mb-0">
          <a href="/articles?scope=related" class="btn btn-link" style="font-size: 0.875rem;font-weight: 500;">
            <%=t :related_articles%>
          </a>
        </h5>
      </div>

      <% if grant_access('view_unrelated_articles', current_user)%>
        <div class="card-header p-0" style="min-height: 0rem;" id="heading1">
          <h5 class="mb-0">
            <a href="/articles?scope=all" class="btn btn-link" style="font-size: 0.875rem;font-weight: 500;">
              <%=t :all_articles%>
            </a>
          </h5>
        </div>
      <%end%>
    </div>



      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <%= render partial: "articles/list", locals: { articles: @articles } %>
    </div>
  </div>
</div>
