<div class='row row-cards row-deck'>
  <div  class='col-sm-6 col-lg-6'>
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%=t :contributor_form%></h3>
      </div>
      <div class="card-status card-status-left bg-blue"></div>
      <div class="card-body">
        <% if permit_by_workflow(article, current_user, 'contributions')%>
          <%= render partial: 'contributions/remote_form', locals: {article: article, contribution: Contribution.new}%>
        <%end%>
      </div>
    </div>
  </div>

  <div class='col-sm-6 col-lg-6'>
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%=t :article_contributions%></h3>
      </div>
        <%= render partial: 'contributions/list', locals: {article: article}%>
    </div>
  </div>
</div>

<% if params[:edit].blank?%>
<div class='row row-cards row-deck'>
  <div  class='col-sm-6 col-lg-6'>
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%=t :involvement_form%></h3>
      </div>
      <div class="card-status card-status-left bg-blue"></div>
      <div class="card-body">
        <% if permit_by_workflow(article, current_user, 'contributions')%>
          <%= render partial: 'involvements/remote_form', locals: {article: article, involvement: Involvement.new}%>
        <%end%>
      </div>
    </div>
  </div>

  <div class='col-sm-6 col-lg-6'>
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%=t :article_involvements%></h3>
      </div>
        <%= render partial: 'involvements/list', locals: {article: article}%>
    </div>
  </div>
</div>
<%end%>
