<div class='row'>
  <div class="col-lg-4 order-lg-1">
  </div>
  <div class="col-lg-8 order-lg-1">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"></h3>
        <div class="card-options">
          <a href="#" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
        </div>
      </div>
      <div class="card-body">
        <div class='row'>
          <div class='col-md-12 col-lg-12'>
                        <div class="form-group">
              <%= label :article, :title , class: "form-label", style: 'color: #7795c1;'%>              <div class="form-control-plaintext"><%= @article.title %></div>
            </div>
                        <div class="form-group">
              <%= label :article, :abstract , class: "form-label", style: 'color: #7795c1;'%>              <div class="form-control-plaintext"><%= @article.abstract %></div>
            </div>
                        <div class="form-group">
              <%= label :article, :content , class: "form-label", style: 'color: #7795c1;'%>              <div class="form-control-plaintext"><%= @article.content %></div>
            </div>
                        <div class="form-group">
              <%= label :article, :url , class: "form-label", style: 'color: #7795c1;'%>              <div class="form-control-plaintext"><%= @article.url %></div>
            </div>
                        <div class="form-group">
              <%= label :article, :slug , class: "form-label", style: 'color: #7795c1;'%>              <div class="form-control-plaintext"><%= @article.slug %></div>
            </div>
                      </div>
        </div>
      </div>
    </div>
  </div>
</div>
