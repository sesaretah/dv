<div class="row row-cards">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @contributions.each do |contribution| %>
          <tr>
                        <td><%= contribution.article_id %></td>
                        <td><%= contribution.role_id %></td>
                        <td><%= contribution.duty_id %></td>
                        <td><%= link_to t(:show), contribution %></td>
            <td><%= link_to t(:edit), edit_contribution_path(contribution) %></td>
            <td><%= link_to t(:destroy), contribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
