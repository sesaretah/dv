<div class="row row-cards">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @assignments.each do |assignment| %>
          <tr>
                        <td><%= assignment.user_id %></td>
                        <td><%= assignment.role_id %></td>
                        <td><%= assignment.assigner_id %></td>
                        <td><%= link_to t(:show), assignment %></td>
            <td><%= link_to t(:edit), edit_assignment_path(assignment) %></td>
            <td><%= link_to t(:destroy), assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
