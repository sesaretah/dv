<div class="row row-cards">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @workflow_transitions.each do |workflow_transition| %>
          <tr>
                        <td><%= workflow_transition.workflow_id %></td>
                        <td><%= workflow_transition.from_state_id %></td>
                        <td><%= workflow_transition.to_state_id %></td>
                        <td><%= workflow_transition.message %></td>
                        <td><%= workflow_transition.user_id %></td>
                        <td><%= workflow_transition.role_id %></td>
                        <td><%= workflow_transition.transition_type %></td>
                        <td><%= link_to t(:show), workflow_transition %></td>
            <td><%= link_to t(:edit), edit_workflow_transition_path(workflow_transition) %></td>
            <td><%= link_to t(:destroy), workflow_transition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
